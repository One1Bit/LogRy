<Window x:Class="LogRy.Setting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogRy"
        xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Setting" Height="400" Width="700" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#FFE4E4E4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.357*"/>
            <ColumnDefinition Width="0.643*"/>
        </Grid.ColumnDefinitions>
        <TreeView x:Name="tv" Margin="8,8,8,32">
            <TreeViewItem Header="Setting">
                <TreeViewItem x:Name="Columns" Header="Columns"/>
                <TreeViewItem x:Name="Split" Header="Split"/>
            </TreeViewItem>
            
        </TreeView>
        <TabControl x:Name="tc" Grid.Column="1" Margin="8,-12,8,56" Background="#FFE4E4E4" BorderBrush="#FFE4E4E4">
            <TabControl.Items>
                <TabItem x:Name="SColumns" Width="0" Height="0" Background="#FFE4E4E4" IsSelected="{Binding ElementName=common, Path=IsSelected}">
                    <Grid Height="346">
                        <TextBlock Height="24" VerticalAlignment="Top" />
                    </Grid>
                </TabItem>
                <TabItem x:Name="customItem" Width="0" Height="0" Background="#FFE4E4E4">
                    <Grid Height="346" Background="#FFE4E4E4">
                        <TextBlock VerticalAlignment="Top"  />
                        <StackPanel Margin="0,20,0,0" Height="70" VerticalAlignment="Top">
                            <CheckBox Content="Элемент управления 1" />
                            <CheckBox Content="Элемент управления 2" />
                            <CheckBox Content="Элемент управления 3" />
                            <CheckBox Content="Элемент управления 4" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,100,0,0" Height="24" VerticalAlignment="Top">
                            <TextBlock Text="Какое-то значение:" Width="120"  Height="24"/>
                            <Slider Width="150" Height="24" Margin="4,0,0,0" IsSnapToTickEnabled="True" Name="slider" />
                            <TextBlock Width="30"  Height="24" Margin="4,0,0,0" />
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem x:Name="serviceItem" Width="0" Height="0" Background="#FFE4E4E4" >
                    <Grid Height="346" Background="#FFE4E4E4">
                        <TextBlock Text="Панель параметров редактора" VerticalAlignment="Top"  />
                        <StackPanel Margin="0,20,0,0">
                            <CheckBox Content="Параметр 1" />
                            <CheckBox Content="Параметр 2" />
                            <CheckBox Content="Параметр 3" />
                            <CheckBox Content="Параметр 4" />
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem x:Name="custom_serviceItem" Width="0" Height="0" Background="#FFE4E4E4" >
                    <Grid Height="346" Background="#FFE4E4E4">
                    </Grid>
                </TabItem>
            </TabControl.Items>
        </TabControl>
        <Button x:Name="cl" Content="Cancel" Grid.Column="1" Height="24" Margin="0,0,16,8" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="80"/>
        <Button x:Name="ok" Content="Ок" Grid.Column="1" Height="24" Margin="0,0,100,8" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="80"/>
    </Grid>
</Window>
